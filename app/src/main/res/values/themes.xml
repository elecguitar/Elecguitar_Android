<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Elecguitar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/elecguitar_blue</item>
        <item name="colorPrimaryVariant">@color/elecguitar_blue</item>
        <item name="colorOnPrimary">@color/elecguitar_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/elecguitar_yellow</item>
        <item name="colorSecondaryVariant">@color/elecguitar_yellow</item>
        <item name="colorOnSecondary">@color/elecguitar_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/elecguitar_statusbar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- bottomsheet 스타일 설정 -->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- chip 스타일 설정 -->
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/nanum_square_round_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:checkable">true</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="chipIconVisible">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/elecguitar_transparent</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/nanum_square_round_bold</item>
        <item name="android:textColor">@color/elecguitar_yellow</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>