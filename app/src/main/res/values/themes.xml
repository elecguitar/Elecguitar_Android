<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Elecguitar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/elecguitar_blue</item>
        <item name="colorPrimaryVariant">@color/elecguitar_blue</item>
        <item name="colorOnPrimary">@color/elecguitar_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/elecguitar_yellow</item>
        <item name="colorSecondaryVariant">@color/elecguitar_yellow</item>
        <item name="colorOnSecondary">@color/elecguitar_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/elecguitar_statusbar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- bottomsheet 스타일 설정 -->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>