<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ChargeStationBottomFragment">

    <TextView
        android:id="@+id/tv_csid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. 00001"
        android:textSize="16sp"
        android:textColor="@color/elecguitar_g1"
        android:fontFamily="@font/nanum_square_round_bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정상"
        android:fontFamily="@font/nanum_square_round_bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img_charge_station"
        app:layout_constraintEnd_toEndOf="parent"
        app:chipBackgroundColor="@color/elecguitar_green"
        />

    <ImageView
        android:id="@+id/img_charge_station"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/charge_station"
        app:layout_constraintTop_toBottomOf="@+id/chip_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/info_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/chip_status"
        app:layout_constraintBottom_toTopOf="@+id/recent_update"
        app:layout_constraintStart_toEndOf="@+id/img_charge_station"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layout_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/info_layout"
            app:layout_constraintBottom_toTopOf="@+id/layout_way"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_bold"
                android:text="충전 타입"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/elecguitar_black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_bold"
                android:layout_weight="1"
                android:text="급속"
                android:textColor="@color/elecguitar_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layout_type"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="충전 방식"
                android:textSize="22sp"
                android:textColor="@color/elecguitar_black"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_bold"
                android:text="DC콤보"
                android:textColor="@color/elecguitar_black"
                android:layout_weight="1"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/recent_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/img_charge_station"
        app:layout_constraintTop_toBottomOf="@+id/info_layout"
        app:layout_constraintBottom_toTopOf="@id/layout_btn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Updates: "
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-11-21"
            android:textSize="10sp"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toEndOf="@+id/img_charge_station"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent_update"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cs_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text="취소"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_cs_find_road"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/cs_button_cancel_shape"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cs_find_road"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text="길찾기"
            android:textColor="@color/elecguitar_white"
            app:layout_constraintStart_toEndOf="@+id/btn_cs_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/cs_button_find_shape"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>